<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="#8F5050"
        android:outlineSpotShadowColor="#352626"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageViewSafetyTimerButton"
                android:layout_width="372dp"
                android:layout_height="175dp"
                android:layout_marginTop="32dp"
                android:outlineAmbientShadowColor="#735656"
                android:outlineSpotShadowColor="#613B3B"
                android:src="@drawable/timebackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="191dp"
                android:layout_height="122dp"
                android:src="@drawable/timersafety"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewSafetyTimerButton"
                app:layout_constraintEnd_toEndOf="@+id/imageViewSafetyTimerButton"
                app:layout_constraintHorizontal_bias="0.693"
                app:layout_constraintStart_toStartOf="@+id/imageViewSafetyTimerButton"
                app:layout_constraintTop_toTopOf="@+id/imageViewSafetyTimerButton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="61dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:text="Safety Timer"
                android:textColor="#040404"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="0.258"
                app:layout_constraintStart_toStartOf="@+id/imageViewSafetyTimerButton"
                app:layout_constraintTop_toTopOf="@+id/imageViewSafetyTimerButton"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="110dp"
                android:layout_height="63dp"
                android:text="Timer for safety, it is set and if it is not stopped at the end of it, emergency messages are sent."
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imageViewSafetyTimerButton" />

            <ImageView
                android:id="@+id/limitZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/zonelimit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewSafetyTimerButton" />

            <ImageView
                android:id="@+id/locationImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/zonelimit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.699"
                app:layout_constraintStart_toEndOf="@+id/limitZone"
                app:layout_constraintTop_toBottomOf="@+id/imageViewSafetyTimerButton" />


            <ImageView
                android:id="@+id/RecordingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/zonelimit"
                app:layout_constraintEnd_toStartOf="@+id/locationImageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/limitZone"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <ImageView
                android:id="@+id/FakeCallView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/zonelimit"
                app:layout_constraintBottom_toTopOf="@+id/imageViewButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/locationImageView"
                app:layout_constraintTop_toBottomOf="@+id/locationImageView"
                app:layout_constraintVertical_bias="0.0" />


            <ImageView
                android:id="@+id/imageViewButton"
                android:layout_width="369dp"
                android:layout_height="186dp"
                android:layout_marginTop="624dp"
                android:outlineAmbientShadowColor="#735656"
                android:outlineSpotShadowColor="#613B3B"

                android:src="@drawable/timebackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="76dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/zonelimitilustration"
                app:layout_constraintBottom_toBottomOf="@+id/limitZone"
                app:layout_constraintEnd_toEndOf="@+id/limitZone"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="@+id/limitZone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="113dp"
                android:layout_height="29dp"
                android:text="Limit Zone"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="@+id/limitZone"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="@+id/limitZone"
                app:layout_constraintTop_toTopOf="@+id/limitZone"
                app:layout_constraintVertical_bias="0.372" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/locationImageView"
                app:layout_constraintHorizontal_bias="0.223"
                app:layout_constraintStart_toStartOf="@+id/locationImageView"
                app:layout_constraintTop_toTopOf="@+id/locationImageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="96dp"
                android:layout_height="76dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/undraw_my_current_location_re_whmt"
                app:layout_constraintEnd_toEndOf="@+id/locationImageView"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toStartOf="@+id/locationImageView"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Recording"
                android:textColor="#040404"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/RecordingView"
                app:layout_constraintHorizontal_bias="0.283"
                app:layout_constraintStart_toStartOf="@+id/RecordingView"
                app:layout_constraintTop_toTopOf="@+id/RecordingView" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/undraw_next_option_re_r9uf"
                app:layout_constraintEnd_toEndOf="@+id/RecordingView"
                app:layout_constraintHorizontal_bias="0.472"
                app:layout_constraintStart_toStartOf="@+id/RecordingView"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="319dp"
                android:layout_height="34dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/zonelimit"
                app:layout_constraintEnd_toEndOf="@+id/imageViewButton"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="@+id/imageViewButton"
                app:layout_constraintTop_toBottomOf="@+id/imageViewButton" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fake Call"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/FakeCallView"
                app:layout_constraintHorizontal_bias="0.281"
                app:layout_constraintStart_toStartOf="@+id/FakeCallView"
                app:layout_constraintTop_toTopOf="@+id/FakeCallView" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="104dp"
                android:layout_height="81dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/undraw_night_calls__5_jh7"
                app:layout_constraintEnd_toEndOf="@+id/FakeCallView"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toStartOf="@+id/FakeCallView"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>