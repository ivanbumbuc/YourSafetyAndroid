<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".limitZone.LimitZoneActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/limitZoneMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="45.760696"
        mapbox:mapbox_cameraTargetLng="21.226788"
        mapbox:mapbox_cameraZoom="2">

        <Button
            android:id="@+id/addButtonMapBox"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/ic_baseline_add_circle_24"
            android:backgroundTint="#171515"
            android:backgroundTintMode="src_over"
            android:textSize="20sp"
            android:textStyle="bold"
            mapbox:cornerRadius="40dp"
            mapbox:iconTint="#CA8181"
            mapbox:rippleColor="#8A2626" />

        <Button
            android:id="@+id/clearButtonMapBox"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="640dp"
            android:background="@drawable/ic_baseline_delete_24"
            android:backgroundTint="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            mapbox:cornerRadius="40dp" />
    </com.mapbox.mapboxsdk.maps.MapView>


</RelativeLayout>